doctype html
html.no-js(lang="en")
  head
    title Interactive Activities - Council for Economic Education
    link(type='text/css', rel='stylesheet', href='/style/index.css')
    script.
      document.documentElement.className = document.documentElement.className.replace(/\bno-js\b/, '');
  body
    div#main
    .initial-loading
      | Loading...
    noscript
      h1 Interactive Activities - Council for Economic Education
      p
        | This page requires JavaScript to function properly. Visit 
        a(href="http://www.enable-javascript.com/") enable-javascript.com
        |  to learn how you can enable JavaScript in your web browser.
    script#activity-data(type='text/json')!= JSON.stringify(activities)
    if dev
      script(src='/bower_components/requirejs/require.js', data-main='/scripts/amd-config')
    else
      script(src='/scripts/main.js')
